@model SchoolarshipManagement.Models.Models.Filiere

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Detail Filiere";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">@title </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Index"><i class="fas fa-plus"></i> &nbsp; Back to List</a>
    </div>
</div>

<form method="post">
    <div class="row p-3 border">
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Code">Code Filiere</label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Code" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name">Name Filiere</label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description">Filiere Description</label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                </div>
            </div>
        </div>
        <div class="form-group row">
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });

    </script>

}