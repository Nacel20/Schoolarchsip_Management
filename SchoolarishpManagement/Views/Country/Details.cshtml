@model SchoolarshipManagement.Models.Models.Country

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Country Detail";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">@title </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Index"><i class="fas fa-plus"></i> &nbsp; Back to List</a>
    </div>
</div>

<form method="post">
    <div class="row p-3 border">
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Code">Abbreviation</label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Code" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name">Full Name</label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="Name" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
        </div>
    </div>
</form>